    </servlet>
    <servlet>
        <servlet-name>GetTemaImg</servlet-name>
        <servlet-class>Controller.GetTemaImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizaTema</servlet-name>
        <servlet-class>Controller.ActualizaTema</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnvioCorreos</servlet-name>
        <servlet-class>Controller.EnvioCorreos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUser</servlet-name>
        <url-pattern>/VerifyUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTutorial</servlet-name>
        <url-pattern>/AddTutorial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllTutorials</servlet-name>
        <url-pattern>/GetAllTutorials</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetImageStream</servlet-name>
        <url-pattern>/GetImageStream</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTema</servlet-name>
        <url-pattern>/AddTema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargaIndex</servlet-name>
        <url-pattern>/CargaIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CierraSesion</servlet-name>
